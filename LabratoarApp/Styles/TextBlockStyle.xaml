<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="BlueGradientBrush" StartPoint="1,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#FFBFC9EA"/>
        <GradientStop Offset="1" Color="#FF82C2CB"/>
    </LinearGradientBrush>
    <Style x:Key="UCITextBlock"
                     TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Background" Value="{StaticResource BlueGradientBrush}" />
        <Setter Property="FontFamily" Value="2  Titr" />
        <Setter Property="FontSize" Value="23" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="650"/>
    </Style>
</ResourceDictionary>
 